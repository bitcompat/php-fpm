{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separatePatchReleases"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>.+?))?\\nARG.+?=\\s*['\"]?(?<currentValue>.+?)['\"]?\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{/if}}"
    },
    {
      "fileMatch": [
        "^\\.github/workflows/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "['\"]?(?<currentValue>[\\d.]+?.+?)['\"]?\\s*# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>.+?))?\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.3.*",
      "allowedVersions": "<8.4"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.2.*",
      "allowedVersions": "<8.3"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.1.*",
      "allowedVersions": "<8.2"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.0.*",
      "allowedVersions": "<8.1"
    },
    {
      "matchDatasources": ["docker"],
      "rangeStrategy": "replace",
      "stabilityDays": 1
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separatePatchReleases"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>.+?))?\\nARG.+?=\\s*['\"]?(?<currentValue>.+?)['\"]?\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "['\"]?(?<currentValue>[\\d.]+?.+?)['\"]?\\s*# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>.+?))?\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.4.*",
      "allowedVersions": "<8.5"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.3.*",
      "allowedVersions": "<8.4"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.2.*",
      "allowedVersions": "<8.3"
    },
    {
      "matchPackageNames": [
        "php/php-src"
      ],
      "matchCurrentVersion": "8.1.*",
      "allowedVersions": "<8.2"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "rangeStrategy": "replace",
      "minimumReleaseAge": "1 day"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
